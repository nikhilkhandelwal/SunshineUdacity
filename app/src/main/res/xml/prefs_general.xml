<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/prefs_location_label"
        android:key ="@string/prefs_location_key"
        android:defaultValue="@string/prefs_location_default"
        android:inputType="text"
        android:singleLine="true"
        />
    <ListPreference
        android:title="@string/prefs_unit_label"
        android:key="@string/prefs_unit_key"
        android:entries="@array/units"
        android:entryValues="@array/unitvalues"
        android:defaultValue="@string/prefs_unit_metric"
        />


</PreferenceScreen>